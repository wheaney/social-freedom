{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "rootDir": "./src",
    "sourceMap": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "../../../node_modules/@types", "./node_modules/@social-freedom"],
    "types": ["aws-lambda", "jest", "node", "types"],
    "baseUrl": ".",
    "paths": {
      "@social-freedom/types": ["../types/src"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
